{# Por defecto, extends busca en templates #}
{% extends 'base.html.twig' %}

{% block header %}
    {# Si quiero mantener el contenido anterior y abajo lo que quiera #}
    {# {{ parent() }} #}
    {{ include('partial/header.html.twig') }}
{% endblock %}

{% block body %}
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Localidad</th>
                <th>Acciones</th>            
            </tr>
        </thead>
        <tbody>
            {% for person in people %}
            <tr>
                <td>{{ person.name }}</td>
                {# <td><a href="{{ path('default_show', { id: loop.index0 }) }}">{{ person.email }}</a></td> #}
                <td>{{ person.email }}</td>
                <td>{{ person.city }}</td>
                <td>
                    <ul>
                        <li><a href="{{ path('default_show', { id: loop.index0 }) }}">Ver en formato HTML</a></li>
                        <li><a href="{{ path('default_index_json', { _format: 'json',  id: loop.index0 }) }}">Ver en formato JSON</a></li>
                    </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: pink;
    }
</style>
{% endblock %} 